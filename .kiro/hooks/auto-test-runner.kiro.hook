{
  "enabled": true,
  "name": "Auto Test Runner",
  "description": "Automatically run quick tests after code modifications to ensure nothing breaks. This hook executes 'npm run test:quick' silently after any Edit operation and provides feedback on test status. Helps catch breaking changes immediately during development. Only runs if package.json exists and the test:quick script is available.",
  "version": "1",
  "when": {
    "type": "userTriggered"
  },
  "then": {
    "type": "askAgent",
    "prompt": "Run the following command to check if tests pass after the recent code changes: `if [[ -f package.json ]] && npm run test:quick --silent >/dev/null 2>&1; then echo '✅ Tests passed'; else echo '⚠️ Tests may need attention'; fi`. Only execute this if package.json exists and contains a test:quick script."
  },
  "workspaceFolderName": "dandan",
  "shortName": "auto-test-runner"
}